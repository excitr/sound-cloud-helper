{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "globalEnv": [
    "ACCESS_TOKEN_SECRET",
    "CLINT_ID",
    "CLIENT_SECRET",
    "CODE_VERIFIER",
    "CODE_CHALLENGE",
    "DATABASE_URL",
    "NODE_ENV",
    "REFRESH_TOKEN_SECRET",
    "REDIRECT_URL",
    "SKIP_ENV_VALIDATION"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "update": {
      "cache": false
    }
  }
}
